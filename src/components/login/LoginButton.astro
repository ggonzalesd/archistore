---
interface Props {
  href: string;
  class: string;
  name: string;
}

const ref = Astro.url.searchParams.get('href');
const params = new URLSearchParams();
if (ref) {
  params.append('state', ref);
}

const { href, name, class: className } = Astro.props;
---

<a
  class:list={[
    'inline-flex items-center gap-1 overflow-hidden rounded-md border transition-transform hover:scale-105',
    className,
  ]}
  href={href + '?' + params}
>
  <slot />
  <span class='px-2'>Login with {name}</span>
</a>
